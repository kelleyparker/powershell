# Silent Install Firefox 
# Download URL: https://www.mozilla.org/en-US/firefox/all/

# Path for the workdir

#Set Working directory and source to download
$workdir = "C:\installer\"


If (Test-Path -Path $workdir -PathType Container)
{ Write-Host "$workdir already exists" -ForegroundColor Red}
ELSE
{ New-Item -Path $workdir  -ItemType directory }

$source = "https://download-installer.cdn.mozilla.net/pub/firefox/releases/66.0.5/win64/en-US/Firefox%20Setup%2066.0.5.exe"
$destination = "$workdir\firefox.exe"

